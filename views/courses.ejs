<% include partials/header %>

<body class="coursePage">
	
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12 mx-auto col-sm-6">
          	<h1>Login</h1>
			<form action="/login" method="POST" id="loginForm">
				<input type="text" name="username" placeholder="username">
				<input type="password" name="password" placeholder="password">
				<button class="button">Login</button>
			</form>
          </div>
          <div class="col-xs-12 mx-auto col-sm-6" id="registerNow">
          	<h1>Not a member?</h1>
          	<p>Accounts are completely free and easy to create! Join now to start tracking your progress and compare your averages to your friends!</p>
          	<button type="button" data-dismiss="modal" data-toggle="modal" data-target="#registerModal">Create FREE Account</button>
          </div>

        </div>
        
      </div>
      
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12 mx-auto">
          	<h1>Sign Up</h1>
			<form action="/register" method="POST">
				<input type="text" name="username" placeholder="username">
				<input type="password" name="password" placeholder="password">
				<button class="button" >Join Now!</button>
			</form>
          </div>
        </div>
        
      </div>
      
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<!-- Header -->
	<div class="navbar-wrapper">
		<div class="navbar nabvar-default navbar-static-top" id="header">
			<div class="container-fluid">

				
					
				<!-- Logo -->
				<div class="navbar-header">
					<a class="navbar-brand hidden-xs" href="/"><img src="/images/reachback.png" alt=""></a>
					<a class="navbar-brand hidden-sm hidden-md hidden-lg" href="/"><img src="/images/reachbacksmall.png" alt=""></a>
					
					<button type="button" class="btn btn-lg navbar-toggle collapsed" data-toggle="collapse" data-target=".navHeaderCollapse" id="toggleNav">
					<span class="glyphicon glyphicon-menu-hamburger"></span>
					</button>
				</div>
				
				<!-- Nav -->
					<div class="collapse navbar-collapse navHeaderCollapse" id="nav">
						<ul class="nav navbar-nav navbar-right">
							<li><a href="/">Home</a></li>
							<li><a href="/scorecard">Scorecard</a></li>
							<li class="active"><a href="/courses/1">Courses</a></li>
							<li><a href="/store">Store</a></li>
							<li><a href="/videos">Videos</a></li>
						<% if(!currentUser) { %>
							<li><a href="#" data-toggle="modal" data-target="#loginModal">Login/Signup</a></li>
						<% } else { %>
							<li><a href="/logout">Logout</a></li>
						<% } %>
						</ul>
					</div>

			</div>
		</div>
	</div>
	<!-- Header -->
	<!-- Banner -->
		<div id="banner">
			<div class="container">
			</div>
		</div>
	<!-- /Banner -->

	<!-- Main -->
	<div id="page">
		<div id="main" class="container">	
			<div class="row">
				<% courses.forEach(function(course){ %>
				<section class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
					<div class="box courseThumbnail">
						
						<div>
							<a href="/courses/<%=current%>/<%= course._id %>" class="image"><img src="<%= course.image_url %>"></a>
							<h4><%= course.name %></h4>
							<p class="byline"><br><%= course.location %></p>
							<a href="/courses/<%=current%>/<%= course._id %>"><button class="button">More Info</button></a>
						</div>

					</div>
				</section>
				<% }); %>
			</div>
			 <% if (pages > 0) { %>
                <ul class="pagination text-center mx-auto">
                    <% if (current == 1) { %>
                        <li class="disabled"><a>First</a></li>
                    <% } else { %>
                        <li><a href="/courses/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="disabled"><a>...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="active"><a><%= i %></a></li>
                        <% } else { %>
                            <li><a href="/courses/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="disabled"><a>...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="disabled"><a>Last</a></li>
                    <% } else { %>
                        <li><a href="/courses/<%= pages %>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>
		</div>
	</div>
	<!-- /Main -->

	<div id="featured">
		<div class="divider"></div>
	</div>

<% include partials/footer %>